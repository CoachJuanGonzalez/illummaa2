# ILLUMMAA Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE
# ============================================
# Neon Serverless PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# ============================================
# ANALYTICS
# ============================================
# Google Analytics 4 Measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# CRM & WEBHOOKS
# ============================================
# GoHighLevel webhook URL for B2B assessments
GHL_WEBHOOK_URL=https://services.leadconnectorhq.com/hooks/...

# GoHighLevel webhook URL for residential inquiries
GHL_RESIDENTIAL_WEBHOOK_URL=https://services.leadconnectorhq.com/hooks/...

# ============================================
# BLOG ADMIN
# ============================================
# Admin password for blog management access
# IMPORTANT: Use a strong password in production
ADMIN_PASSWORD=your_secure_admin_password_here

# ============================================
# CLOUDINARY (Image Upload)
# ============================================
# Cloudinary Cloud Name (found in Cloudinary dashboard)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name

# Cloudinary Upload Preset (create an unsigned preset in Cloudinary settings)
# Instructions:
# 1. Go to Settings > Upload > Add upload preset
# 2. Set Signing Mode to "Unsigned"
# 3. Set Folder to "illummaa-blog"
# 4. Copy the preset name here
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ============================================
# APPLICATION
# ============================================
# Node environment (development | production)
NODE_ENV=development

# Application port
PORT=5000

# Session secret for express-session
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# ============================================
# SECURITY
# ============================================
# Trust proxy setting (true for production behind load balancer)
TRUST_PROXY=false

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=https://illummaa.com,https://*.replit.app,https://*.replit.dev
